%head
  %meta{:charset => "utf-8"}/
  %title Luc J. Bourhis Musings - #{@item[:title]}
  %link{:rel => "stylesheet", :href => "#{@items['/stylesheet.*'].path}"}/

  -# you don't need to keep this, but it's cool for stats!
  %meta{:name => "generator", :content => "nanoc #{Nanoc::VERSION}"}/
  #{render "/mathjax.*"}
  %script{:src => "https://cdn.mathjax.org/mathjax/latest/MathJax.js"}
%body
  -# define the theorem-like DSL so that ERB can later interpret it
  - render "/#{language}/theorem-like.erb"
  #main
    #{yield}
    -# if we are not on the main page for one of the language, then...
    - if %r{^/[a-z]{2}/index} !~ @item.identifier
      #{render "/bibliography.*"}
      #{render "/#{language}/licence.*"}
  #sidebar
    %a{:href => "/fr/"}
      %img{:src => "/fr/icon.png"}
    %a{:href => "/en/"}
      %img{:src => "/en/icon.png"}
    .whoami= render "/#{language}/side_header.*"

    - sidebar_tree(language).each do |key, entries|
      .topics= key
      %ul.title-list
        - entries.each do |e|
          %li.title= link_to(e[:title], e)
